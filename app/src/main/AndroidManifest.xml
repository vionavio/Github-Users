<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.vionavio.githubuser">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="com.vionavio.githubuser.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.vionavio.githubuser.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/github"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/SearchTheme"
        tools:ignore="AllowBackup">
        <receiver android:name=".widget.GithubUserWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/github_user_widget_info" />
        </receiver>

        <activity android:name=".view.FavoriteActivity" />
        <activity android:name=".view.DetailActivity" />
        <activity android:name=".view.SettingPreferenceActivity" />
        <activity
            android:name=".view.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".util.notification.AlarmReceiver"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedReceiver" />

        <provider
            android:name=".provider.UserProvider"
            android:authorities="com.vionavio.githubuser"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.vionavio.githubuser.READ_DATABASE"
            android:writePermission="com.vionavio.githubuser.WRITE_DATABASE" />
    </application>

</manifest>